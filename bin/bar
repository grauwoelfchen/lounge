#!/bin/sh

# TODO: parse TOML

# bar -l or bar list
options="l"

_=`getopt --name "${0}" \
--options "${options}" --unquoted -- "${@}"`

if [ $? -ne 0 ]; then
  exit 2
fi

cmd="list" # default

while [ $# -gt 0 ]; do
  case "${1}" in
    -l)
      shift
      ;;
    *)
      cmd="${1}"
      shift
      ;;
  esac
done

if [ "${cmd}" = "list" ]; then
  grep -iE 'title' -h -R data -B 1 -A 6
  exit 0
else
  echo "No such command"
  exit 1
fi
